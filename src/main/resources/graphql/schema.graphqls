#--------------------------------------------------
type User {
    id: ID
    username: String
    email: String
    status: UserStatus
}
type UserSettings {
    avatarID: String!
    volume: Int!
    status: UserStatus!
    # ...
}
type Player {
    id: ID!
    name: String!
    avatarID: String!
}
type Score {
    mode: GameMode!
    score: Int!
}

type Lobby {
    id: ID!
    name: String!
    size: Int!
    owner: User!
    status: LobbyStatus!
    gameCategory: GameCategory!
    gameMode: GameMode!
    game: Game!
    players: [User]
}
type Game {
    amountRounds: Int
    roundTime: Int
    # wordCategories: Categories ??? how
}

type Message {
    userId: ID
    message: String
}

