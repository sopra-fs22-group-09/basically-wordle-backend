#--------------------------------------------------
enum UserStatus {
    ONLINE
    AWAY
}
enum GameCategory {
    PVP
    COOP
    SOLO
}
enum GameMode {
    WORDSPP
    SONICFAST
    TIMERESET
    PARTY
    CHALLENGE
    CHAIN
    CLASSIC
    INTIME
    PLAYERVSAI
    ONEWORD
    WORDCOMBINATION
}
enum LobbyStatus {
    OPEN
    FULL
    INGAME
}
enum LetterState {
    UNKNOWN
    CORRECTPOSITION
    INWORD
    WRONG
}